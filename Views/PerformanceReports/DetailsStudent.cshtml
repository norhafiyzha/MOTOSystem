@model MOTOSystem.Models.PerformanceReport

@{
    ViewBag.Title = "DetailsStudent";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid content-top-gap">
        <!-- forms 1 -->
        <div class="card card_border py-2 mb-4">
            <div class="cards__heading col-md-6">
                <h3>Maklumat Prestasi <span></span></h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.User.u_id)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.User.u_id)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Nama Pelajar</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.User.u_fname) @Html.DisplayFor(model => model.User.u_lname)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.p_month)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.p_month)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.student_performance)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.student_performance)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.class_date)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.class_date)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.p_status)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.p_status)</p>
                                    </div>
                                </div>

                                <br />
                                <br />
                                @if (ViewBag.status != "Luluskan")
                                {@Html.ActionLink("Luluskan", "Approve", new { id = Model.p_id }, new { @class = "btn btn-success" })}
                                <button class="btn btn-info" onclick="window.print()">Print</button>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //forms 1 -->
    </div>
}
<p>
    @Html.ActionLink("Kembali", "Index")
</p>