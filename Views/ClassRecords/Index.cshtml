@model IEnumerable<MOTOSystem.Models.ClassRecord>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid content-top-gap">

    <!-- breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb my-breadcrumb">
            @if (Session["userRole"].ToString() == "Admin")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("ADashboard", "Home")">Utama</a></li>
            }
            @if (Session["userRole"].ToString() == "Ustaz")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
            }
            @if (Session["userRole"].ToString() == "Ustazah")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
            }
            @if (Session["userRole"].ToString() == "Pelajar")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("SDashboard", "Home")">Utama</a></li>
            }

            <li class="breadcrumb-item active" aria-current="page">Rekod Keseluruhan Kelas</li>
        </ol>
    </nav>
    <!-- //breadcrumbs -->
    <!-- forms -->
    <section class="forms">
        <!-- forms 2 -->
        <div class="card card_border py-2 mb-4">
            <div class="cards__heading">
                <h3>Rekod Keseluruhan Kelas</h3>
            </div>
            <p>
                @Html.ActionLink("Rekod Baharu", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <br />
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.class_time)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User.u_id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.class_teacher)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Class_Package1.cp_name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.class_time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.u_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.class_teacher)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Class_Package1.cp_name)
                        </td>

                        <td>
                            @Html.ActionLink("Kemaskini", "Edit", new { id = item.class_id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Maklumat", "Details", new { id = item.class_id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Padam", "Delete", new { id = item.class_id }, new { @class = "btn btn-danger" })

                        </td>
                    </tr>
                }

            </table>
        </div>
        <!-- //forms 2 -->
    </section>
</div>

