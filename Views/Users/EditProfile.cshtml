@model MOTOSystem.Models.User

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid content-top-gap">

        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                @if (Session["userRole"].ToString() == "Admin")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("ADashboard", "Home")">Utama</a></li>
                }
                @if (Session["userRole"].ToString() == "Ustaz")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
                }
                @if (Session["userRole"].ToString() == "Ustazah")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
                }
                @if (Session["userRole"].ToString() == "Pelajar")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("SDashboard", "Home")">Utama</a></li>
                }

                <li class="breadcrumb-item active" aria-current="page">Kemaskini Profil</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- forms -->
        <section class="forms">
            <!-- forms 2 -->
            <div class="card card_border py-2 mb-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.u_id)
                @Html.HiddenFor(model => model.u_password)
                <div class="card-body">
                    <form action="#" method="post" style="margin: auto; width: 220px;">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_id, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_id, new { htmlAttributes = new { @class = "form-control input-style", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.u_id, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_email, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_email, new { htmlAttributes = new { @class = "form-control input-style", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.u_email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_fname, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_fname, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_fname, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_lname, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_lname, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_lname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_roles, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_roles, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_roles, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_contact, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_contact, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_contact, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_pic, htmlAttributes: new { @class = "control-label col-md-6" })
                                <div class="col-md-10">
                                    <input type="file" name="ImageFile" />
                                </div>
                            </div>
                        </div>
                        <button type="submit" value="Save" class="btn btn-primary btn-style mt-4">Kemaskini</button>
                    </form>
                </div>
            </div>
            <!-- //forms 2 -->
        </section>
    </div>
}

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
