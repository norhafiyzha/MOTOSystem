
@model IEnumerable<MOTOSystem.Models.User>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid content-top-gap">

    <!-- breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb my-breadcrumb">
            @if (Session["userRole"].ToString() == "Admin")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("ADashboard", "Home")">Utama</a></li>
            }
            @if (Session["userRole"].ToString() == "Ustaz")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
            }
            @if (Session["userRole"].ToString() == "Ustazah")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
            }
            @if (Session["userRole"].ToString() == "Pelajar")
            {
                <li class="breadcrumb-item"><a href="@Url.Action("SDashboard", "Home")">Utama</a></li>
            }

            <li class="breadcrumb-item active" aria-current="page">Rekod Keseluruhan Pengguna</li>
        </ol>
    </nav>
    <!-- //breadcrumbs -->
    <!-- forms -->
    <section class="forms">
        <!-- forms 2 -->
        <div class="card card_border py-2 mb-4">
            <div class="cards__heading">
                <h3>Rekod Keseluruhan Pengguna</h3>
            </div>
            <p>
                @Html.ActionLink("Pengguna Baharu", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <br />
            <div class="table-responsive">
                <table class="table" id="example1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.u_email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.u_fname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.u_lname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.u_roles)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.u_contact)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.u_email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.u_fname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.u_lname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.u_roles)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.u_contact)
                                </td>

                                <td>
                                    @Html.ActionLink("Kemaskini", "Edit", new { id = item.u_id }, new { @class = "btn btn-warning" })
                                    @Html.ActionLink("Maklumat", "Details", new { id = item.u_id }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Padam", "Delete", new { id = item.u_id }, new { @class = "btn btn-danger" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- //forms 2 -->
    </section>
</div>

