@model MOTOSystem.Models.User

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid content-top-gap">

        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ADashboard","Users")">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Kemaskini Profil</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- forms -->
        <section class="forms">
            <!-- forms 2 -->
            <div class="card card_border py-2 mb-4">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.u_id)
                <div class="card-body">
                    <form action="#" method="post" style="margin: auto; width: 220px;">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_password, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_npassword, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_npassword, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_npassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(model => model.u_cpassword, htmlAttributes: new { @class = "control-label col-md-6" })
                                @Html.EditorFor(model => model.u_cpassword, new { htmlAttributes = new { @class = "form-control input-style" } })
                                @Html.ValidationMessageFor(model => model.u_cpassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <button type="submit" value="Save" class="btn btn-primary btn-style mt-4">Kemaskini Kata Laluan</button>
                    </form>
                </div>
            </div>
            <!-- //forms 2 -->
        </section>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
