@model MOTOSystem.Models.User
@{
    ViewBag.Title = "ChangePassword";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid content-top-gap">

        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                @if (Session["userRole"].ToString() == "Admin")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("ADashboard", "Home")">Utama</a></li>
                }
                @if (Session["userRole"].ToString() == "Ustaz")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
                }
                @if (Session["userRole"].ToString() == "Ustazah")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("TDashboard", "Home")">Utama</a></li>
                }
                @if (Session["userRole"].ToString() == "Pelajar")
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("SDashboard", "Home")">Utama</a></li>
                }

                <li class="breadcrumb-item active" aria-current="page">Ubah Kata Laluan</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- forms -->
        <section class="forms">
            <!-- forms 2 -->
            <div class="card card_border py-2 mb-4">
                <div class="cards__heading">
                    <h3>Ubah Kata Laluan</h3>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.u_id)
                @Html.HiddenFor(model => model.u_email)
                @Html.HiddenFor(model => model.u_contact)
                @Html.HiddenFor(model => model.u_fname)
                @Html.HiddenFor(model => model.u_lname)
                @Html.HiddenFor(model => model.u_roles)

                <div class="card-body">
                    <form action="#" method="post" style="margin: auto; width: 220px;">
                        <div class="form-row">
                            @Html.LabelFor(model => model.u_password, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control", type = "password", id = "u_password" } })
                            @Html.ValidationMessageFor(model => model.u_password, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="form-row">
                            <label class="control-label col-md-2"> Sahkan Kata Laluan </label>
                            <input class="form-control" type="password" id="u_cpassword">
                        </div>
                        <button type="submit" value="Save" class="btn btn-primary btn-style mt-4" onclick="return matchPassword()">Ubah Kata Laluan</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
}
<script>
    function matchPassword() {
        var u_password = document.getElementById("u_password");
        var u_cpassword = document.getElementById("u_cpassword");
        if (u_password.value != u_cpassword.value) {
            alert("Kata laluan tidak sama");
            return false;
        }
        else {
            alert("Rekod berjaya disimpan");
            return true;
        }
    }
</script>