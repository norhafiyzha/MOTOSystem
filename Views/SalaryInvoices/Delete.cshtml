@model MOTOSystem.Models.SalaryInvoice

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid content-top-gap">
        <!-- forms 1 -->
        <div class="card card_border py-2 mb-4">
            <div class="cards__heading">
                <h3>Hapus Rekod Gaji <span></span></h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.i_id)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.i_id)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.User.u_id)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.User.u_id)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.i_month)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.i_month)</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>@Html.DisplayNameFor(model => model.i_amount)</label>
                                    </div>
                                    <div class="col-md-6">
                                        <p>@Html.DisplayFor(model => model.i_amount)</p>
                                    </div>
                                </div>
                                <br />
                                <input type="submit" value="Padam" class="btn btn-danger" onclick="return confirm('Anda yakin ingin hapuskan rekod gaji tersebut?');" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //forms 1 -->
    </div>



    <div class="form-actions no-color">
        @Html.ActionLink("Kembali", "Index")
    </div>
}
