@{ Layout = null;}
@model IEnumerable<MOTOSystem.Models.ClassRecord>
<!DOCTYPE html>
<html>
<head>

</head>

<div class="container">
    <div class="row">
        <!-- BEGIN INVOICE -->
        <div class="col-xs-12">
            <div class="grid invoice">
                <div class="grid-body">
                    <div class="invoice-title">
                        <div class="row">
                            <div class="col-xs-12">
                                <table style="width:100%">
                                    <td>
                                        <img src="LOGO-UTM.png" alt="" height="80">
                                    </td>
                                    <td>
                                        <h1>Copy of Official Receipt</h1>
                                    </td>
                                </table>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-xs-12">
                                <p><i>Student Financial: Tel:#; Email:#<br>Others: Tel:#; Email:#</i></p>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <h3>Transaction Details</h3>
                        <table style="width:100%">
                            <tr>
                                <td>TUTOR NAME:</td>
                                <td>@ViewBag.name  </td>
                            </tr>
                            <tr>
                                <td>MERCHANT NAME:</td>
                                <td>MengajiOneToOne</td>
                            </tr>
                            <tr>
                                <td>MONTH: </td>
                                <td>@ViewBag.month</td>
                            </tr>
                            <tr>
                                <td>STATUS: </td>
                                <td>@ViewBag.status</td>
                            </tr>

                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h3>Payment For</h3>
                            <table class="table table-striped" style="border: 1px solid black; width:80%">
                                <thead>
                                    <tr class="line">

                                        <td class="text-center"><strong>Durasi Kelas</strong></td>
                                        <td class="text-center"><strong>Nama Pelajar</strong></td>
                                        <td class="text-center"><strong>Nama Pakej</strong></td>
                                        <td class="text-center"><strong>Amount</strong></td>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.class_time)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.User.u_fname)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Class_Package1.cp_name)
                                                </td>
                                                <td>
                                                    @ViewBag.pClass
                                                </td>
                                            </tr>
                                     }

<tr>
                                        <td class="text-center" colspan="2">Total Amount</td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-center">@ViewBag.Total</td>
                                    </tr>
                                </tbody>
                            </table>
                            <button onclick="window.print()">Print </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- END INVOICE -->
    </div>
</div>
</html>