@model MOTOSystem.Models.SalaryInvoice

@{
    ViewBag.Title = "Details";
}


<div class="container-fluid content-top-gap">
    <!-- forms 1 -->
    <div class="card card_border py-2 mb-4">
        <div class="cards__heading col-md-6">
            <h3>Maklumat Invois <span></span></h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>@Html.DisplayNameFor(model => model.i_id)</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.i_id)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>@Html.DisplayNameFor(model => model.User.u_id)</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.User.u_id)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nama Pengajar</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.User.u_roles) @Html.DisplayFor(model => model.User.u_fname) @Html.DisplayFor(model => model.User.u_lname)</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <label>@Html.DisplayNameFor(model => model.i_month)</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.i_month)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>@Html.DisplayNameFor(model => model.i_amount)</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.i_amount)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>@Html.DisplayNameFor(model => model.i_allowance)</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.i_allowance)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>@Html.DisplayNameFor(model => model.i_classes)</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@Html.DisplayFor(model => model.i_classes)</p>
                                </div>
                            </div>
                            <br />
                            <br />
                            @Html.ActionLink("Kemaskini", "Edit", new { id = Model.i_id }, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //forms 1 -->
</div>
<p>

    @Html.ActionLink("Kembali", "Index")
</p>
